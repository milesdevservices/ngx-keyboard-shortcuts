{
    "compilerOptions": {
        "declaration": true,
        "module": "es6",
        "target": "es6",
        "baseUrl": ".",
        "stripInternal": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "outDir": "../build",
        "rootDir": ".",
        "lib": ["es6", "dom"],
        "skipLibCheck": true,
        "types": []
    },
    "angularCompilerOptions": {
        "annotateForClosureCompiler": true,
        "strictMetadataEmit": true,
        "skipTemplateCodegen": true,
        "flatModuleOutFile": "ngx-keyboard-shortcuts.js",
        "flatModuleId": "ngx-keyboard-shortcuts"
    },
    "files": ["./index.ts"]
}
